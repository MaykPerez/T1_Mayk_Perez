<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Distribuidores</h2>"
        </div>
        <div class="col-6">
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" strype="width:100%">
            <thead>
                <tr>
                    <th>Nombre Distribidor</th>
                    <th>RazonSocial</th>
                    <th>Telefono</th>
                    <th>AnioInicioOperacion</th>
                    <th>Contacto</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="40%">@item.NombreDistribuidor</th>
                        <th width="30%">@item.NombreDistribuidor</th>
                        <th width="20%">@item.Telefono</th>
                        <th width="20%">@item.AnioInicioOperacion</th>
                        <th width="20%">@item.Contacto</th>
                        <th></th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {

        <p>No hay registros de Distribuidores</p>

    }


</div>